<h1>Book List</h1>

<table class="table table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Language</th>
      <th>Print length</th>
      <th>Discount(%)</th>
      <th>Price(USD)</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.author %></td>
        <td><%= book.language %></td>
        <td><%= book.print_length %></td>
        <td><%= book.discount %></td>
        <td><%= book.price %></td>

        <td><%= link_to "Show", book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New book", new_book_path, class:"btn btn-secondary" %>
